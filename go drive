<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Go Drive</title>
  <style>
    body { margin: 0; overflow: hidden; background: black; }
    #title {
      position: absolute;
      top: 10px;
      left: 10px;
      color: white;
      font-family: Arial;
      font-size: 24px;
      z-index: 10;
    }
  </style>
</head>
<body>
  <div id="title">ðŸš— Go Drive</div>

  <script src="https://cdn.jsdelivr.net/npm/three@0.160.0/build/three.min.js"></script>
  <script>
    // Scene
    const scene = new THREE.Scene();
    scene.background = new THREE.Color(0x87ceeb);

    // Camera
    const camera = new THREE.PerspectiveCamera(
      75,
      window.innerWidth / window.innerHeight,
      0.1,
      1000
    );

    // Renderer
    const renderer = new THREE.WebGLRenderer({ antialias: true });
    renderer.setSize(window.innerWidth, window.innerHeight);
    document.body.appendChild(renderer.domElement);

    // Light
    const light = new THREE.DirectionalLight(0xffffff, 1);
    light.position.set(5, 10, 5);
    scene.add(light);
    scene.add(new THREE.AmbientLight(0xffffff, 0.4));

    // Ground
    const ground = new THREE.Mesh(
      new THREE.PlaneGeometry(200, 200),
      new THREE.MeshStandardMaterial({ color: 0x228B22 })
    );
    ground.rotation.x = -Math.PI / 2;
    scene.add(ground);

    // Car
    const car = new THREE.Mesh(
      new THREE.BoxGeometry(1.5, 0.5, 3),
      new THREE.MeshStandardMaterial({ color: 0xff0000 })
    );
    car.position.y = 0.25;
    scene.add(car);

    camera.position.set(0, 3, -6);

    // Controls
    const keys = {};
    window.addEventListener("keydown", e => keys[e.key] = true);
    window.addEventListener("keyup", e => keys[e.key] = false);

    let speed = 0;
    let turnSpeed = 0.03;

    function animate() {
      requestAnimationFrame(animate);

      if (keys["w"] || keys["ArrowUp"]) speed += 0.01;
      if (keys["s"] || keys["ArrowDown"]) speed *= 0.95;
      speed *= 0.98;

      if (keys["a"] || keys["ArrowLeft"]) car.rotation.y += turnSpeed;
      if (keys["d"] || keys["ArrowRight"]) car.rotation.y -= turnSpeed;

      car.position.x -= Math.sin(car.rotation.y) * speed;
      car.position.z -= Math.cos(car.rotation.y) * speed;

      // Camera follows car
      camera.position.x = car.position.x + Math.sin(car.rotation.y) * 6;
      camera.position.z = car.position.z + Math.cos(car.rotation.y) * 6;
      camera.lookAt(car.position);

      renderer.render(scene, camera);
    }

    animate();

    window.addEventListener("resize", () => {
      camera.aspect = window.innerWidth / window.innerHeight;
      camera.updateProjectionMatrix();
      renderer.setSize(window.innerWidth, window.innerHeight);
    });
  </script>
</body>
</html>
